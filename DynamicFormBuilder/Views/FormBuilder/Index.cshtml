@using System.Linq
@model List<DynamicFormBuilder.Models.Form>
@{
    ViewData["Title"] = "Form History";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">History</h6>
    </div>
    <div class="card-body">
        @if (Model != null && Model.Any()) // This is where the error occurs
        {
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Form Title</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var form in Model)
                        {
                            <tr>
                                <td>@form.Title</td>
                                <td>
                                    <a asp-action="Preview" asp-route-id="@form.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Preview
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No forms have been saved yet. Go to <a asp-action="Create">Create Form</a> to build one.</p>
        }
    </div>
</div>